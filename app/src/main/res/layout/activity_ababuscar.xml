<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14181C"
    tools:context=".BuscarActivity">

    <!-- Barra superior com o ícone de voltar e o título -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="<"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:contentDescription="Voltar" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Busca"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />
    </LinearLayout>

    <!-- Campo de busca -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#D9D9D9"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB" />

        <TextView
            android:id="@+id/closeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:text="X"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:contentDescription="Fechar" />

    </LinearLayout>

    <!-- Sessão Categorias -->
    <TextView
        android:id="@+id/categoriesLabel"
        android:layout_below="@id/searchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Categorias"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/categoriesGrid"
        android:layout_below="@id/categoriesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:columnCount="3"
        android:rowCount="2"
        android:gap="8dp">

        <!-- Adicione botões ou cards para cada categoria -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#14181C">
            <!-- Conteúdo interno -->
        </FrameLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="CheckBox" />

        <!-- Repetir os FrameLayouts para cada categoria -->

    </GridLayout>

    <!-- Sessão Recomendações -->
    <TextView
        android:id="@+id/recommendationsLabel"
        android:layout_below="@id/categoriesGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Recomendações"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Tags -->
    <FlexboxLayout
        android:id="@+id/tagsContainer"
        android:layout_below="@id/recommendationsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:flexWrap="wrap"
        android:justifyContent="flex_start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_tag"
            android:padding="8dp"
            android:text="Destaque da Semana"
            android:textColor="#FFFFFF" />

        <!-- Repetir TextViews para cada tag -->

    </FlexboxLayout>

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#14181C">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:tint="#FFFFFF"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/savedIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_saved"
            android:tint="#FFFFFF"
            android:contentDescription="Salvos" />

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:tint="#FFFFFF"
            android:contentDescription="Buscar" />

        <ImageView
            android:id="@+id/trendingIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_trending"
            android:tint="#FFFFFF"
            android:contentDescription="Em Alta" />
    </LinearLayout>

</RelativeLayout>