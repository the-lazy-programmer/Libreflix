<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14171C"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">  <!-- Centering all child views -->

    <!-- Adding margin for spacing -->

    <!-- Adding margin for spacing -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="158dp"
        android:layout_height="246dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/captura_de_tela_2024_10_16_130021" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:hint="UsuÃ¡rio"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Senha"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="12dp" />

    <!-- Adding margin for spacing -->

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="439dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FDFDFD"
        android:drawableTint="#F6F6F6"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Login"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="442dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2B778B"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Registrar"
        android:textColor="#FFFFFF"
        app:iconTint="#050505" />

    <!-- Adding margin for spacing -->
</LinearLayout>
