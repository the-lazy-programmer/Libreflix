<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14181C">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cadastro"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/campoEmail"
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="418dp" />

    <EditText
        android:id="@+id/campoSenha"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="510dp" />

    <EditText
        android:id="@+id/campoName"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="233dp" />

    <EditText
        android:id="@+id/campoUsername"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:id="@+id/EntrarConta"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:text="EntrarConta"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="665dp" />

    <Button
        android:id="@+id/CriarConta"
        android:layout_width="276dp"
        android:layout_height="43dp"
        android:text="CriarConta"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="604dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

